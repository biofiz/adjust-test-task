%h1 Where is tweets?
.jumbotron
  = form_tag tweets_index_path, method: :get do
    .form-row.search-form
      .col-md-9
        = text_field_tag :search, params[:search], class: 'form-control'
      .col-auto
        = submit_tag 'Search', name: nil, class: 'btn btn-primary'

  -if @tweets
    = render 'tweets'
